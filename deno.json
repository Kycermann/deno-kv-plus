{
  "tasks": {
    "format": "deno fmt --unstable",
    "format:check": "deno fmt --check --unstable",
    "lint:check": "deno lint --unstable",

    "test": "deno test --parallel --no-prompt --unstable --allow-all"
  },

  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "require-await",
        "no-explicit-any",
        "ban-ts-comment",
        "no-inferrable-types"
      ]
    }
  },

  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}
